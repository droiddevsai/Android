<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!-- Styles inside app -->

    <style name="textHeader">
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textActivityTitle" parent="textHeader">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="textRegular">
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="textSmall">
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="textPrice">
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrice</item>
    </style>

    <style name="textError">
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textColor">@color/colorError</item>
    </style>

</resources>
